{
	"name": "ROBLOX Tools",
	"description": "Multiple tools that help you with ROBLOX stuff.",
	"version": "1.0",
	"manifest_version": 3,
	"permissions": [
		"tabs",
		"cookies",
		"scripting"
	],
	"host_permissions": [
		"https://*.roblox.com/*"
	],
	"action": {
		"default_popup": "index.html"
	},
	"background": {
		"service_worker": "scripts/backend.js"
	},
	"icons": {
		"16": "unicorn.png",
		"32": "unicorn.png",
		"48": "unicorn.png",
		"128": "unicorn.png"
	}
}